{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "Node",
    "useDefineForClassFields": false,
    "module": "commonjs",
    "allowJs": true,
    "typeRoots": [
      "../node_modules/@types",
      "./types/modules"
    ]
  }
}
